<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_profile_itemchat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_itemchat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Dr. Lukman Hakim"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_profile_itemchat"
        app:layout_constraintTop_toTopOf="@+id/iv_profile_itemchat" />

    <TextView
        android:id="@+id/tv_title_itemchat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dokter Spesialis Kulit"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_itemchat"
        app:layout_constraintStart_toStartOf="@+id/tv_name_itemchat"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_itemchat" />

    <TextView
        android:id="@+id/tv_age_itemchat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#DDDDDD"
        android:padding="5dp"
        android:text="22 Tahun"
        app:layout_constraintStart_toStartOf="@+id/tv_title_itemchat"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_itemchat" />

    <Button
        android:id="@+id/btn_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat"
        app:layout_constraintBottom_toBottomOf="@+id/iv_profile_itemchat"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_itemchat"
        app:layout_constraintTop_toBottomOf="@+id/tv_age_itemchat" />

    <TextView
        android:id="@+id/tv_price_itemchat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Rp 1.000.000"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/btn_chat"
        app:layout_constraintEnd_toStartOf="@+id/btn_chat"
        app:layout_constraintStart_toStartOf="@+id/tv_age_itemchat"
        app:layout_constraintTop_toBottomOf="@+id/tv_age_itemchat" />

</androidx.constraintlayout.widget.ConstraintLayout>