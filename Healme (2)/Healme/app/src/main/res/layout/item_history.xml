<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_trx_itemhistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="#HJKND97987HB"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_price_itemhistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rp 1.000.000"
        app:layout_constraintEnd_toEndOf="@+id/tv_trx_itemhistory"
        app:layout_constraintStart_toStartOf="@+id/tv_trx_itemhistory"
        app:layout_constraintTop_toBottomOf="@+id/tv_trx_itemhistory" />

    <TextView
        android:id="@+id/tv_date_itemhistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2022-03-02"
        app:layout_constraintEnd_toEndOf="@+id/tv_price_itemhistory"
        app:layout_constraintStart_toStartOf="@+id/tv_price_itemhistory"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_itemhistory" />

    <TextView
        android:id="@+id/tv_status_itemhistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pending"
        app:layout_constraintEnd_toEndOf="@+id/tv_date_itemhistory"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_itemhistory" />

    <View
        android:id="@+id/divider5"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_status_itemhistory" />
</androidx.constraintlayout.widget.ConstraintLayout>