<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_img_itemcart"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_name_itemcart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Obat Gatal"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_img_itemcart"
        app:layout_constraintTop_toTopOf="@+id/iv_img_itemcart" />

    <TextView
        android:id="@+id/tv_price_itemcart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rp 10.000.000"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_itemcart"
        app:layout_constraintStart_toStartOf="@+id/tv_name_itemcart"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_itemcart" />

    <ImageView
        android:id="@+id/iv_add_itemcart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="@color/purple_700"
        android:padding="5dp"
        android:tint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/tv_price_itemcart"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_itemcart"
        app:srcCompat="@drawable/ic_add" />

    <TextView
        android:id="@+id/tv_qty_itemcart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="0"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_add_itemcart"
        app:layout_constraintEnd_toStartOf="@+id/iv_add_itemcart"
        app:layout_constraintTop_toTopOf="@+id/iv_add_itemcart" />

    <ImageView
        android:id="@+id/iv_min_itemcart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@color/purple_700"
        android:padding="5dp"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/iv_add_itemcart"
        app:layout_constraintEnd_toStartOf="@+id/tv_qty_itemcart"
        app:layout_constraintTop_toTopOf="@+id/iv_add_itemcart"
        app:srcCompat="@drawable/ic_min" />

    <ImageView
        android:id="@+id/iv_rmv_itemcart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="#BC0000"
        android:padding="5dp"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_min_itemcart"
        app:layout_constraintTop_toTopOf="@+id/iv_min_itemcart"
        app:srcCompat="@drawable/ic_trash" />

</androidx.constraintlayout.widget.ConstraintLayout>